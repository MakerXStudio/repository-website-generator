{
  "name": "@makerx/repository-website-generator",
  "publishConfig": {
    "access": "public"
  },
  "version": "0.0.0-development",
  "description": "Generates a Next.js static website by converting markdown to html",
  "keywords": [
    "TypeScript",
    "TS",
    "MarkerX",
    "Next.js",
    "CI",
    "CD",
    "Automation"
  ],
  "author": "MakerX",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/MakerXStudio/repository-website-generator/issues"
  },
  "homepage": "https://github.com/MakerXStudio/repository-website-generator#readme",
  "bin": {
    "repository-website-generator": "./run-generator.js"
  },
  "scripts": {
    "dev": "next",
    "build": "next build && next export",
    "serve-local": "npm run generate-doc && next build && next export && http-server -c-1 ./out",
    "start": "next start",
    "generate-doc": "typedoc",
    "prepare": "husky install",
    "semantic-release": "semantic-release",
    "lint": "eslint --ext .ts --ext .tsx ./pages/ ./components/ ./shared/",
    "lint:fix": "eslint --ext .ts --ext .tsx ./pages/ ./components/ ./shared/ --fix",
    "commitlint": "commitlint --edit -o"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MakerXStudio/repository-website-generator.git"
  },
  "engines": {
    "node": ">=18.0"
  },
  "dependencies": {
    "next": "13.1.1",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-markdown": "^8.0.4",
    "react-syntax-highlighter": "^15.5.0",
    "remark-gfm": "^3.0.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.4.1",
    "@commitlint/config-conventional": "^17.4.0",
    "@types/fs-extra": "^11.0.0",
    "@types/node": "18.11.18",
    "@types/react": "18.0.26",
    "@types/react-dom": "18.0.10",
    "@types/react-syntax-highlighter": "^15.5.6",
    "autoprefixer": "^10.4.13",
    "conventional-changelog-conventionalcommits": "^5.0.0",
    "eslint": "8.31.0",
    "eslint-config-next": "13.1.1",
    "eslint-config-prettier": "^8.6.0",
    "fs-extra": "^11.1.0",
    "gray-matter": "^4.0.3",
    "http-server": "^14.1.1",
    "husky": "^8.0.3",
    "postcss": "^8.4.21",
    "prettier": "^2.8.2",
    "tailwindcss": "^3.2.4",
    "typedoc": "^0.23.24",
    "typedoc-plugin-markdown": "^3.14.0",
    "typescript": "4.9.4"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      [
        "@semantic-release/commit-analyzer",
        {
          "preset": "conventionalcommits",
          "releaseRules": [
            {
              "type": "build",
              "release": "patch"
            },
            {
              "type": "chore",
              "release": "patch"
            }
          ]
        }
      ],
      [
        "@semantic-release/release-notes-generator",
        {
          "preset": "conventionalcommits",
          "presetConfig": {
            "types": [
              {
                "type": "feat",
                "section": "Features"
              },
              {
                "type": "fix",
                "section": "Bug Fixes"
              },
              {
                "type": "build",
                "section": "Dependencies and Other Build Updates",
                "hidden": false
              }
            ]
          }
        }
      ],
      "@semantic-release/npm",
      "@semantic-release/github"
    ]
  }
}
